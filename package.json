{
  "name": "play-money-casino-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20 <21"
  },
  "engineStrict": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node --no-deprecation dist/index.js",
    "start:pretty": "cross-env CLI_THEME=neo node --no-deprecation dist/index.js",
    "dev": "tsx watch src/index.ts",
    "backup": "tsx scripts/backup.ts",
    "migrate": "node dist/db/migrate.js || tsx src/db/migrate.ts",
    "migrate:guilds": "node dist/db/migrate.js || tsx src/db/migrate.ts",
    "register": "node dist/register.js || tsx src/register.ts",
    "register:dev": "cross-env NODE_ENV=development tsx src/register.ts --scope guild",
    "register:global": "cross-env NODE_ENV=production DEV_GUILD_ID= REGISTER_ON_START=true VERBOSE=1 tsx src/register.ts --scope global",
    "migrate:prod": "node dist/db/migrate.js",
    "register:prod": "cross-env NODE_ENV=production node dist/register.js",
    "selftest": "node -e \"console.log('node',process.version)\" && npm run build && npm run migrate:prod && node -e \"require('./dist/ui/cardFactory.js'); console.log('cardFactory load ok')\"",
    "purge:global": "tsx src/tools/purge.ts --target global",
    "purge:guild": "tsx src/tools/purge.ts --target guild --guild %DEV_GUILD_ID%",
    "purge:all": "tsx src/tools/purge.ts --target global && tsx src/tools/purge.ts --target guild --guild %DEV_GUILD_ID%",
    "list:commands": "node dist/scripts/list-commands.js || tsx scripts/list-commands.ts",
    "env:check": "node -e \"const m=+process.versions.node.split('.')[0]; if(m>=21||m<20){console.error('\u274C This project requires Node 20.x LTS. On Windows, install nvm-windows and run: nvm install 20.18.1 && nvm use 20.18.1'); process.exit(1)}\"",
    "preinstall": "npm run env:check",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs --runInBand",
    "build:cards": "node -e \"console.log('build:cards placeholder');\"",
    "setup:env": "node -e \"const fs=require('fs');if(!fs.existsSync('.env')){fs.copyFileSync('.env.example','.env');console.log('Created .env from .env.example');}else{console.log('.env already exists')}\"",
    "start:cli": "node dist/index.js"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "discord.js": "^14.15.3",
    "figlet": "^1.9.3",
    "gradient-string": "^2.0.2",
    "log-symbols": "^5.1.0",
    "ora": "^7.0.1",
    "pino": "^9.13.1",
    "pretty-ms": "^9.3.0",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.13",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.3.3",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "canvas": "^2.11.2",
    "openmoji": "^15.0.0",
    "sharp": "^0.33.4"
  }
}
